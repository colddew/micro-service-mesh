pipeline {

    agent any

    environment {
        ALIYUN_REGISTRY_CRED = credentials('aliyun-registry')
        ALIYUN_REGISTRY_HOST = 'registry.cn-hangzhou.aliyuncs.com'
    }

    stages {
        stage('unit test') {
            agent {
                docker {
                    image 'maven:3.8.4-jdk-8'
                    args '-v /Users/anmy/.m2/:/root/.m2'
                }
            }
            steps {
                echo 'project build...'
//                 sh 'mvn -Pk8s clean test'
            }
        }

        stage('project build') {
            agent {
                docker {
                    image 'maven:3.8.4-jdk-8'
                    args '-v /Users/anmy/.m2/:/root/.m2'
                }
            }
            steps {
                echo 'project build...'
                sh 'mvn -Pk8s clean package -Dmaven.test.skip=true'
                stash excludes: '**/build/**', includes: '**', name: 'source'
            }
        }

        stage('docker build') {
            steps {
                unstash 'source'
                echo 'docker build...'
                dir("${WORKSPACE}/micro-service-server3") {
                    sh "docker build -t micro-service-server3:${env.BUILD_ID} ."
                    sh "docker tag micro-service-server3:${env.BUILD_ID} ${ALIYUN_REGISTRY_HOST}/plantlink/micro-service-server3:${env.BUILD_ID}"
                    sh "docker login -u ${ALIYUN_REGISTRY_CRED_USR} -p ${ALIYUN_REGISTRY_CRED_PSW} ${ALIYUN_REGISTRY_HOST}"
                    sh "docker push ${ALIYUN_REGISTRY_HOST}/plantlink/micro-service-server3:${env.BUILD_ID}"
                }
            }
        }

        stage('k8s deploy') {
            steps {
                echo 'k8s deploy...'
                input "Does the k8s environment look ok?"
            }
        }
    }

    post {
        always {
            deleteDir()
        }
    }
}